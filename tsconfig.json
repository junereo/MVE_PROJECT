{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": [
        "packages/types/*"
      ],
      "@utils/*": [
        "packages/utils/*"
      ]
    }
  },
  "include": [
    "apps/*/src",
    "packages/*/src",
    "apps/tuner-api/tsconfig.json"
  ]
}